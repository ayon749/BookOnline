@model BookOnline.Models.Catagory
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Catagory";
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.CatagoryId != 0)
        {<input type="hidden" asp-for="CatagoryId" />
            title = "Edit Catagory";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.CatagoryId != 0)
                    {
                        <partial name="_EditAndBackToListView" model="Model.CatagoryId" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListView" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{ 
<partial name="_ValidationScriptsPartial"/>
}